<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br><br>
  <%= f.label :genre_id, "Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>
  Notes:<br>
  <input name="song[note_contents][]" id="song_notes_1"><br>
  <input name="song[note_contents][]" id="song_notes_2"><br>
  <input name="song[note_contents][]" id="song_notes_3">
  <br><br>
  <%= f.submit %>
<% end %>


